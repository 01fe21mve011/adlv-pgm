module repeat_loop_break;
  int i;
     initial begin
    $display(&quot;-----------------------------------------------------------------&quot;);
repeat(5) begin
  $display(&quot;\tValue of i=%0d&quot;,i);
  if(i == 2) begin
    $display(&quot;\tCalling break,&quot;);
    break;
  end

      i++;
    end     
         $display(&quot;-----------------------------------------------------------------&quot;);
  end    
endmodule
